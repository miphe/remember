extends ../layout
block content
    .jumbotron
        .container-fluid
            h1.text-center Login
            div.row
                div.col-md-6.col-md-offset-3
                    form(role='form', id='login', method='post', action='/user/login')
                        div.form-group
                            input.form-control#field-email(type='email', placeholder='Your email', name='email')
                        div.form-group
                            input.form-control#field-password(type='password', placeholder='Password', name='password')
                        button.btn.btn-default(type='submit') Login
            .row
                div.col-md-6.col-md-offset-3
                    a(href='/user/register') Register a new account
                    a(href='/user/forgot') Forgot password